#!/bin/bash
# usage unstow-repo WORK_DIR URL

# assert WORK_DIR does not exist. Special case /app, which can safely be cleaned
if [ -d $1 ]; then
  [ $1 != "/app" ] && { echo error: $1 already exists; exit 1; }
  find /app -depth -mindepth 1 -print0 | xargs -0 rm -rf
fi

# set up logging; all stderr/stdout appends to debug log
mkdir -p $1/.log
exec >>$1/.log/debug.log 2>&1

# main script
set -xeo pipefail
echo Started at $(date)

BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
APP_DIR=$(dirname $BIN_DIR)

WORK_DIR=$1
REPO_URL=$2

(
  cd $WORK_DIR
  git init --bare .git

  STATUS=$(curl -o repo.tgz -w "%{http_code}" "$REPO_URL" || true)
  [ $STATUS == "200" ] && tar xfvz repo.tgz -C .git

  rm -rf $REPO_DIR/hooks
  cp -R $APP_DIR/etc/hooks .git
)

echo Finished at $(date)
