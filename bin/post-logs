#!/bin/bash

APP_DIR=$1
API_URL=$2
LOG_DIR=$APP_DIR/.log

curl \
  -F "metadata=@$LOG_DIR/metadata.yml"  \
  -F "detect=@$LOG_DIR/detect.log"      \
  -F "compile=@$LOG_DIR/compile.log"    \
  -F "release=@$LOG_DIR/release.log"    \
  -F "debug=@$LOG_DIR/debug.log"        \
  -F "exit_status=$LOG_DIR/finished"    \
  "$API_URL"