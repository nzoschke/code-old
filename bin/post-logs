#!/bin/bash

APP_DIR=$1
API_URL=$2
TMP_DIR=$APP_DIR/.tmp

curl \
  -F "metadata=@$TMP_DIR/metadata.yml"  \
  -F "detect=@$TMP_DIR/detect.log"      \
  -F "compile=@$TMP_DIR/compile.log"    \
  -F "release=@$TMP_DIR/release.log"    \
  -F "debug=@$TMP_DIR/debug.log"        \
  -F "exit=@$TMP_DIR/exit"              \
  "$API_URL"