#!/usr/bin/env ruby
require "unicorn"
require "./lib/code"

app = Rack::Builder.new {
  map("/")        { run Code::Web::Director }
  map("/pushes")  { run Code::Web::PushAPI  }
}

opts = {
  before_fork:      ->(s,w) { Sequel.connect ENV["DATABASE_URL"] },
  listeners:        "0.0.0.0:#{ENV["PORT"] || 5000}",
  timeout:          60,
  worker_processes: 4
}

Unicorn::HttpServer.new(app, opts).start.join
